<UserControl x:Class="MPT_AUDIO_PLAYER.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MPT_AUDIO_PLAYER"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel MaxWidth="200" VerticalAlignment="Center">
            <Label FontSize="28" Content="Welcome back!" HorizontalContentAlignment="Center"/>
            <Separator/>
            <Label Content="Login or email:"/>
            <TextBox Name="txt_login"/>
            <Label Content="Password:"/>
            <PasswordBox Name="txt_password"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0 20 0 0">
                <Button Content="Login" Width="60" Margin="20 0 20 0" Click="login_click"/>
                <Button Content="Register" Width="60" Margin="20 0 20 0" Click="register_click_"/>
            </StackPanel>
            <Label Visibility="Hidden" Name="txt_message" Height="30"/>
        </StackPanel>
    </Grid>
</UserControl>
