<UserControl x:Class="MPT_AUDIO_PLAYER.Register"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MPT_AUDIO_PLAYER"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel MaxWidth="200" VerticalAlignment="Center" >
            <Label FontSize="40" Content="Welcome!" HorizontalContentAlignment="Center"/>
            <Separator/>
            <Label Content="Email:"/>
            <TextBox Name="txt_email"/>
            <Label Content="Login:"/>
            <TextBox Name="txt_login"/>
            <Label Content="Password:"/>
            <PasswordBox Name="txt_password"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0 20 0 0">
                <Button Content="Back" Width="60" Margin="20 0 20 0" Click="back_click_"/>
                <Button Content="Register" Width="60" Margin="20 0 20 0" Click="register_click"/>
            </StackPanel>
            <Label Visibility="Hidden" Name="txt_message" Height="30"/>
        </StackPanel>    
    </Grid>
</UserControl>
