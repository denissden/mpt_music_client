<UserControl x:Class="MPT_AUDIO_PLAYER.PremiumPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MPT_AUDIO_PLAYER"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel MaxWidth="450" VerticalAlignment="Center">
            <Label FontSize="28" Content="Premium" HorizontalContentAlignment="Center" Name="lbl_main"/>
            <Separator/>
            <Button Content="Get premium" Width="120" Margin="20 10 30 0" Click="toggle_premium" Name="btn_main"/>
        </StackPanel>    
    </Grid>
</UserControl>
